extends layout

block content
	script(src="js/Chart.js")
	body.sidebar-mini.skin-purple-light
		.wrapper

			include header

			include sidebar

			// Content Wrapper. Contains page content
			.content-wrapper
				// Main content
				section.content
					// Your Page Content Here
					each item in row
						.box
							.box-body
								ul.products-list.product-list-in-box
									.product-info
										ul
											li
												h4
													b
														a(href='#') #{item.goodName}
											li 현재가격 : #{item.goodPrice} 원 / #{item.goodTotalCnt}
											li 한달전가격 :  
											li 업체명 : #{item.entpName}
											li 상세정보
											| #{item.detailMean}
							.box-footer(style="padding-left:50px;")
									canvas#myChart(width="400" height="300")
							script(type='text/javascript').
								var data = {
									labels: ["#{item.goodInspectDay}", "1", "2", "3"],
									datasets: [{
									fillColor: "rgba(255,255,255,0.2)",
									strokeColor: "rgba(110,110,110,1)",
									pointColor: "rgba(110,110,110,1)",
									pointStrokeColor: "#fff",
									pointHighlightFill: "#fff",
									pointHighlightStroke: "rgba(220,220,220,1)",
									data: [#{item.goodPrice}, 1, 2, 3]}]
								};
								var ctx = document.getElementById("myChart").getContext("2d");
								var myNewChart = new Chart(ctx).Line(data);	
		include scripts